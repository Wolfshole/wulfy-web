---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'Wulfy Web', description = 'Willkommen bei Wulfy Web' } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="stylesheet" href="/src/styles/base.css">
  <link rel="stylesheet" href="/src/styles/nightmode.css">
  <link rel="stylesheet" href="/src/styles/enhanced-navigation.css">
</head>
<body>
  <header class="site-header">
    <section class="navigation">
      <nav class="navbar">
        <div class="navbar-container">
          <a href="/" class="nav-brand">
            <span class="logo-text">Wulfy</span>
          </a>
          
          <div class="mobile-toggle" aria-label="Navigation Menu" aria-expanded="false">
            <span></span>
            <span></span>
            <span></span>
          </div>

          <ul class="nav-menu" aria-hidden="false">
            <li><a href="/" class="nav-link" data-translate="nav-home">Startseite</a></li>
            <li><a href="/about" class="nav-link" data-translate="nav-about">√úber mich</a></li>
            <li><a href="/projects" class="nav-link" data-translate="nav-projects">Projekte</a></li>
            <li><a href="/faq" class="nav-link" data-translate="nav-faq">FAQ</a></li>
            <li><a href="/impressum" class="nav-link" data-translate="footer-impressum">Impressum</a></li>
          </ul>

          <div class="nav-actions">
            <button id="nightModeBtn" class="theme-toggle" aria-label="Toggle Night Mode">
              üåô Night Mode
            </button>
            <button id="translateBtn" aria-label="Switch Language">üåê EN</button>
            <div id="auth-buttons">
              <button id="anmelden" class="btn-login" data-translate="nav-login">Anmelden</button>
              <button id="registrieren" class="btn-register" data-translate="nav-register">Registrieren</button>
            </div>
            <div id="user-menu" style="display: none;">
              <span id="user-greeting">Hallo, <span id="nav-username"></span>!</span>
              <button id="dashboard-link" class="btn-dashboard">Dashboard</button>
              <button id="logout-btn" class="btn-logout">Abmelden</button>
            </div>
          </div>
        </div>
      </nav>
    </section>
  </header>

  <main class="main-content">
    <slot />
  </main>

  <footer class="site-footer">
    <div class="footer-container">
      <div class="footer-grid">
        <div class="footer-section">
          <h3>Wulfy Web</h3>
          <p>Ihre moderne Webplattform f√ºr Projekte und mehr.</p>
        </div>
        
        <div class="footer-section">
          <h4>Navigation</h4>
          <ul class="footer-links">
            <li><a href="/">Home</a></li>
            <li><a href="/about">√úber uns</a></li>
            <li><a href="/projects">Projekte</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h4>Rechtliches</h4>
          <ul class="footer-links">
            <li><a href="/datenschutz">Datenschutz</a></li>
            <li><a href="/impressum">Impressum</a></li>
            <li><a href="/agb">AGB</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h4>Kontakt</h4>
          <ul class="footer-links">
            <li><a href="mailto:info@wulfy-web.de">info@wulfy-web.de</a></li>
            <li><a href="/kontakt">Kontaktformular</a></li>
          </ul>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; 2026 Wulfy Web. Alle Rechte vorbehalten.</p>
      </div>
    </div>
  </footer>

  <script src="/src/scripts/nightmode.js"></script>
  <script>
    // Mobile Menu Toggle
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const navMenu = document.querySelector('.nav-menu');

    mobileMenuToggle?.addEventListener('click', () => {
      navMenu?.classList.toggle('active');
      mobileMenuToggle?.classList.toggle('active');
    });

    // Update Auth Navigation based on login status
    function updateAuthNavigation() {
      const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
      const currentUser = JSON.parse(localStorage.getItem('currentUser') || 'null');
      
      const authButtons = document.getElementById('auth-buttons');
      const userMenu = document.getElementById('user-menu');
      const navUsername = document.getElementById('nav-username');
      
      if (isLoggedIn && currentUser) {
        // User ist angemeldet
        if (authButtons) authButtons.style.display = 'none';
        if (userMenu) userMenu.style.display = 'flex';
        if (navUsername) navUsername.textContent = currentUser.username;
        
        // Dashboard-Button nur f√ºr Admins anzeigen
        const dashboardLink = document.getElementById('dashboard-link');
        if (dashboardLink) {
          dashboardLink.style.display = currentUser.isAdmin ? 'block' : 'none';
        }
      } else {
        // User ist nicht angemeldet
        if (authButtons) authButtons.style.display = 'flex';
        if (userMenu) userMenu.style.display = 'none';
      }
    }

    // Event Listeners f√ºr Auth-Buttons
    document.addEventListener('DOMContentLoaded', () => {
      updateAuthNavigation();
      
      // Anmelden Button
      const anmeldenBtn = document.getElementById('anmelden');
      if (anmeldenBtn) {
        anmeldenBtn.addEventListener('click', () => {
          window.location.href = '/login';
        });
      }
      
      // Registrieren Button
      const registrierenBtn = document.getElementById('registrieren');
      if (registrierenBtn) {
        registrierenBtn.addEventListener('click', () => {
          window.location.href = '/register';
        });
      }
      
      // Dashboard Button
      const dashboardBtn = document.getElementById('dashboard-link');
      if (dashboardBtn) {
        dashboardBtn.addEventListener('click', () => {
          window.location.href = '/dashboard';
        });
      }
      
      // Logout Button
      const logoutBtn = document.getElementById('logout-btn');
      if (logoutBtn) {
        logoutBtn.addEventListener('click', () => {
          localStorage.removeItem('currentUser');
          localStorage.removeItem('isLoggedIn');
          window.location.href = '/';
        });
      }
    });

    // Active Link Highlighting
    const currentPath = window.location.pathname;
    document.querySelectorAll('.nav-link').forEach(link => {
      if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
      }
    });
  </script>
  <script src="/src/scripts/enhanced-navigation.js"></script>
</body>
</html>
