---
import CleanLayout from "../layouts/CleanLayout.astro";
import "../styles/footer.css";
import "../styles/index.css";
import "../styles/cookie-banner.css";
import "../styles/nightmode.css";
import "../styles/responsive-utilities.css";
import "../styles/translate.css";
import CookieBanner from "../components/CookieBanner.astro";
---

<CleanLayout title="Willkommen auf der Web seite von Wulfy">
  <body>
	<main>
		<article>
		<section class="welcome">
		<h1 data-translate="welcome-title">Willkommen auf meiner Webseite</h1>
		<p data-translate="welcome-intro">
			Dies ist die offizielle Webseite von UEBlackWulfGHG.
			Oder auch bekannt als Wulfy.
			oder bessergesagt Euch meiner Community.
		</p>
		<p data-translate="welcome-description">
			Hier werdet ihr meine Projekte, Updates und vieles mehr finden.
			Ich werde versuchen, die Seite regelmäßig zu aktualisieren und immer auf dem Laufenden zu halten.
		</p>
		<CookieBanner />
	    </section>
	    </article>
	</main>

	<footer>
	<div class="footer-container">
		<div class="footer-column">
			<h4 data-translate="footer-contact">Kontakt</h4>
			<p>Discord: ueblackwulf</p>
			<p data-translate="footer-email">Oder auch per Email: wulfghg@gmail.com</p>
		</div>
		<div class="footer-column">
			<h4 data-translate="footer-discord">Zum Discord Server:</h4>
			<a href="/impressum">Impressum</a>
			<ul>
				<li><a href="https://discord.gg/gy4HYACX9g" data-translate="footer-server">Server</a></li>
			</ul>
		</div>
	</div>
	<div class="footer-bottom">
		<p class="copyright">&copy; 2026 UEBlackWulfGHG all rights reserved.</p>
	</div>
	</footer>

	<footer class="footer">
		<div class="container">
			<div class="footer-content">
				<div class="footer-section">
					<h3 data-translate="footer-quick-links">Schnellzugriff</h3>
					<ul>
						<li><a href="/" data-translate="nav-home">Startseite</a></li>
						<li><a href="/about" data-translate="nav-about">Über mich</a></li>
						<li><a href="/projects" data-translate="nav-projects">Projekte</a></li>
						<li><a href="/faq" data-translate="nav-faq">FAQ</a></li>
						<li><a href="/tea-client" data-translate="nav-tea-client">Tea Client</a></li>
					</ul>
				</div>
				<div class="footer-section">
					<h3 data-translate="footer-legal">Rechtliches</h3>
					<ul>
						<li><a href="/impressum" data-translate="footer-impressum">Impressum</a></li>
						<li><a href="/datenschutz" data-translate="footer-privacy">Datenschutz</a></li>
					</ul>
				</div>
				<div class="footer-section">
					<h3 data-translate="footer-contact">Kontakt</h3>
					<p>
						<span data-translate="footer-email">E-Mail:</span> 
						<a href="mailto:wulfghg@gmail.com">wulfghg@gmail.com</a>
					</p>
				</div>
			</div>
			<div class="footer-bottom">
				<p data-translate="footer-copyright">&copy; 2026 Wulfy. Alle Rechte vorbehalten.</p>
			</div>
		</div>
	</footer>

	<script src="../scripts/nightmode.js"></script>
	<script src="../scripts/navigation.js"></script>
	<script src="../scripts/auth.js"></script>
	<script src="../scripts/translate.js"></script>
  </body>
</CleanLayout>